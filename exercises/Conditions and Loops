# Solution for Question 1
x = 15  

if x > 10:
    print(f"{x} is greater than 10")
elif x == 10:
    print(f"{x} is equal to 10")
else:
    print(f"{x} is less than 10")



# Solution for Question 2
numbers = [10, 21, 32, 43, 54]

for num in numbers:
    if num % 2 == 0:
        print(f"{num} is even")
    else:
        print(f"{num} is odd")



# Solution for Question 3
sentence = 'Python is fun and powerful'

if "fun" in sentence:
    print("The sentence contains the word 'fun'")
elif "boring" in sentence:
    print("The sentence contains the word 'boring'")
else:
    print("The sentence does not contain the words 'fun' or 'boring'")



# Solution for Question 4
grades = [85, 92, 78, 90, 92, 85, 92]

grade_counts = {}

for grade in grades:
    if grade in grade_counts:
        grade_counts[grade] += 1
    else:
        grade_counts[grade] = 1

# Print results
for grade, count in grade_counts.items():
    print(f"Grade {grade} appears {count} time(s)")




# Solution for Question 5
countries = {
    'Canada': 38,
    'Brazil': 212,
    'India': 1391,
    'Germany': 83,
    'Japan': 126
}

for country, population in countries.items():
    print(f"{country}: {population} million")
    if population > 100:
        print(f"{country} is heavily populated")